class Solution {
    public int longestOnes(int[] nums, int k) {
        int left = 0, right = 0, max_len = 0, zeroes = 0;

        while(right < nums.length){
            if(nums[right] == 0){
                zeroes++;

                while(zeroes > k){
                    int value = nums[left];
                    if(value == 0){
                        zeroes--;
                    }
                    left++;
                }
            }

            //update max_len
            max_len = Math.max(max_len, right - left + 1);
            right++;
        }

        return max_len;
    }
}
