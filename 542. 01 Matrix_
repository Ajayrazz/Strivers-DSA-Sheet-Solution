class Pair {
    int first;
    int second;
    public Pair(int first, int second){
        this.first = first;
        this.second = second;
    }
}

class Solution {
    public int[][] updateMatrix(int[][] mat) {
        int n = mat.length;
        int m = mat[0].length;
        int[][] dist = new int[n][m];

        //Queue to store the position of index which is having 0 as it's value
        Queue<Pair> queue = new LinkedList<>();
        for(int i = 0; i < n; i++){
            for(int j = 0; j < m; j++){
                if(mat[i][j] == 0){
                    dist[i][j] = 0;
                    queue.add(new Pair(i, j));
                }
                else {
                    dist[i][j] = -1;
                }
            }
        }

        int[] dx = {1, 0, 0, -1}; // DLRU
        int[] dy = {0, -1, 1, 0}; // DLRU
        while(!queue.isEmpty()){
            int row = queue.peek().first;
            int col = queue.peek().second;
            queue.poll();

            for(int index = 0; index < 4; index++){
                int nRow = row + dx[index];
                int nCol = col + dy[index];

                if(nRow >= 0 && nRow < n && nCol >= 0 && nCol < m && dist[nRow][nCol] == -1){
                    dist[nRow][nCol] = 1 + dist[row][col];
                    queue.add(new Pair(nRow, nCol));
                }
            }
        }

        return dist;
    }
}
