class Solution {
    public int[] constructTransformedArray(int[] nums) {
        int n = nums.length;
        int[] res = new int[n];
        for (int i = 0; i < n; i++) {
            res[i] = nums[getWrappedIndex(i, nums[i], n)];
        }
        return res;
    }

    //getWrappedIndex function
    private int getWrappedIndex(int index, int offset, int size) {
        int wrapped = index + offset;
        wrapped %= size;
        if (wrapped < 0) wrapped += size;
        return wrapped;
    }
}
