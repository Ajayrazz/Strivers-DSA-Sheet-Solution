class Solution {
    public Map<Character, String> map = Map.of(
        '2', "abc",
        '3', "def",
        '4', "ghi",
        '5', "jkl",
        '6', "mno",
        '7', "pqrs",
        '8', "tuv",
        '9', "wxyz"
    );
    public List<String> letterCombinations(String digits) {
        //base case
        if(digits == null || digits.length() == 0) return new ArrayList<>();
        List<String> result = new ArrayList<>();
        Backtrack(0, digits, result, "");
        return result;
    }

    //Backtrack Function
    public void Backtrack(int index, String digits, List<String> result, String current){
        //base case
        if(current.length() == digits.length()){
            result.add(current);
            return;
        }

        if(index >= digits.length()){
            return;
        }

        String digit = map.get(digits.charAt(index));
        for(char ch : digit.toCharArray()){
            Backtrack(index + 1, digits, result, current + ch);
        }
    }
}
