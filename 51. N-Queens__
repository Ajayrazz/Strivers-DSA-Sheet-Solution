class Solution {
    public List<List<String>> solveNQueens(int n) {
        char[][] board = new char[n][n];
        for(char[] row : board){
            Arrays.fill(row, '.');
        }

        int[] leftRow = new int[n];
        int[] lowerDiagonal = new int[2 * n - 1];
        int[] upperDiagonal = new int[2 * n - 1];
        List<List<String>> result = new ArrayList<>();

        Helper(0, n, board, result, leftRow, lowerDiagonal, upperDiagonal);
        return result;
    }

    public void Helper(int col, int n, char[][] board, List<List<String>> result, int[] leftRow, int[] lowerDiagonal, int[] upperDiagonal){
        //base case
        if(col == n){
            result.add(construct(board));
            return;
        }

        for(int row = 0; row < board.length; row++){
            if(leftRow[row] == 0 && lowerDiagonal[row + col] == 0 && upperDiagonal[board.length - 1 + col - row] == 0){
                // make the changes
                board[row][col] = 'Q';
                leftRow[row] = 1;
                lowerDiagonal[row + col] = 1;
                upperDiagonal[board.length - 1 + col - row] = 1;

                //recall the function
                Helper(col + 1, n, board, result, leftRow, lowerDiagonal, upperDiagonal);

                //revert the changes
                board[row][col] = '.';
                leftRow[row] = 0;
                lowerDiagonal[row + col] = 0;
                upperDiagonal[board.length - 1 + col - row] = 0;
            }
        }
    }

    //construct function
    public List<String> construct(char[][] board){
        List<String> result = new ArrayList<>();
        for(int i = 0; i < board.length; i++){
            String str = new String(board[i]);
            result.add(str);
        }
        return result;
    }
}
