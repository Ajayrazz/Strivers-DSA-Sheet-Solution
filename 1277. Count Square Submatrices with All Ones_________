class Solution {
    public int countSquares(int[][] matrix) {
        //base case
        if(matrix == null || (matrix.length == 0 && matrix[0].length == 0)) return 0;
        int n = matrix.length, m = matrix[0].length;
        int[][] dp = new int[n][m];
        //fill the first row
        for(int j = 0; j < m; j++){
            dp[0][j] = matrix[0][j];
        }
        //fill the first column
        for(int i = 0; i < n; i++){
            dp[i][0] = matrix[i][0];
        }

        for(int i = 1; i < n; i++){
            for(int j = 1; j < m; j++){
                if(matrix[i][j] == 0){
                    dp[i][j] = 0;
                }
                else {
                    dp[i][j] = 1 + Math.min(dp[i - 1][j - 1], Math.min(dp[i - 1][j], dp[i][j - 1]));
                }
            }
        }

        int count = 0;
        for(int i = 0; i < n; i++){
            for(int j = 0; j < m; j++){
                count += dp[i][j];
            }
        }

        return count;
    }
}
