class Solution {
    public int maxProfit(int[] prices) {
        int n = prices.length;
        int[][] dp = new int[n][2];
        for(int[] row : dp){
            Arrays.fill(row, -1);
        }
        return maxProfitUtil(0, 0, prices, dp);
    }

    //maxProfitUtil function
    public int maxProfitUtil(int index, int buy, int[] prices, int[][] dp){
        //case 1
        if(index == prices.length) return 0;
        //case 2
        if(dp[index][buy] != -1) return dp[index][buy];

        int profit = 0;
        if(buy == 0){
            int operation1 = maxProfitUtil(index + 1, 0, prices, dp);   // do not transaction
            int operation2 = -prices[index] + maxProfitUtil(index + 1, 1, prices, dp);  // buy the stock
            //update profit
            profit = Math.max(operation1, operation2);
        }
        else {
            int operation1 = maxProfitUtil(index + 1, 1, prices, dp);   // do not transaction
            int operation2 = prices[index] + maxProfitUtil(index + 1, 0, prices, dp);   // sell the stocks
            //update profit
            profit = Math.max(operation1, operation2);
        }

        //update dp
        return dp[index][buy] = profit;
    }
}
