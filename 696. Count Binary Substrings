class Solution {
    public int countBinarySubstrings(String s) {
        int result = 0;
        
        for (int i = 0; i < s.length() - 1; i++) {
            if (s.charAt(i) != s.charAt(i + 1)) {
                
                int left = i;
                int right = i + 1;
                
                while (left >= 0 && right < s.length() &&
                       s.charAt(left) == s.charAt(i) &&
                       s.charAt(right) == s.charAt(i + 1)) {
                    
                    result++;
                    left--;
                    right++;
                }
            }
        }
        return result;
    }
}
