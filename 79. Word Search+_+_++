class Solution {
    public boolean exist(char[][] board, String word) {
        int n = board.length;
        int m = board[0].length;
        boolean[][] visited = new boolean[n][m];
        boolean result = false;
        
        for(int i = 0; i < board.length; i++){
            for(int j = 0; j < board[0].length; j++){
                if(board[i][j] == word.charAt(0)){
                    result = Helper(0, i, j, board, word, visited);

                    if(result){
                        return true;
                    }
                }
            }
        }

        return false;
    }

    public boolean Helper(int index, int i, int j, char[][] board, String word, boolean[][] visited){
        //base case
        if(index == word.length()) return true;

        //case of invalid
        if(i < 0 || i >= board.length || j < 0 || j >= board[0].length || visited[i][j] || board[i][j] != word.charAt(index)){
            return false;
        }

        //visit
        visited[i][j] = true;
        //traverse in all 4 direction
        if(Helper(index + 1, i + 1, j, board, word, visited) ||
           Helper(index + 1, i - 1, j, board, word, visited) ||
           Helper(index + 1, i, j + 1, board, word, visited) ||
           Helper(index + 1, i, j - 1, board, word, visited)){
            return true;
        }

        //univist
        visited[i][j] = false;
        return false;
    }
}
