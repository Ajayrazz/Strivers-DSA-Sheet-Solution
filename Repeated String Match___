class Solution {
    public int repeatedStringMatch(String a, String b) {
        StringBuilder sb = new StringBuilder(a);
        int count = 1;

        while(sb.length() < b.length()){
            sb.append(a);
            count += 1;

            if(sb.toString().contains(b)){
                return count;
            }
        }

        //check whether b is present in sb or not
        if(sb.toString().contains(b)){
            return count;
        }

        //if not present, append a one more times
        sb.append(a);
        count += 1;
        if(sb.toString().contains(b)){
            return count;
        }

        return -1;
    }
}
