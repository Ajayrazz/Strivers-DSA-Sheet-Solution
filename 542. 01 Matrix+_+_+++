class Pair {
    int first;
    int second;
    public Pair(int first, int second){
        this.first = first;
        this.second = second;
    }
}

class Solution {
    public int[][] updateMatrix(int[][] mat) {
        Queue<Pair> queue = new LinkedList<>();
        int n = mat.length;
        int m = mat[0].length;
        int[][] dist = new int[n][m];

        for(int i = 0; i < n; i++){
            for(int j = 0; j < m; j++){
                if(mat[i][j] == 0){
                    dist[i][j] = 0;
                    //add it to queue
                    queue.add(new Pair(i, j));
                }
                else {
                    dist[i][j] = -1;
                }
            }
        }

        //Down, Left, Right, Up
        int[] dx = {1, 0, 0, -1};
        int[] dy = {0, -1, 1, 0};
        
        while(!queue.isEmpty()){
            int row = queue.peek().first;
            int col = queue.peek().second;
            queue.remove();

            for(int i = 0; i < 4; i++){
                int nRow = row + dx[i];
                int nCol = col + dy[i];

                if(nRow >= 0 && nRow < n && nCol >= 0 && nCol < m && dist[nRow][nCol] == -1){
                    //update dist
                    dist[nRow][nCol] = dist[row][col] + 1;
                    //add it to queue
                    queue.add(new Pair(nRow, nCol));
                }
            }
        }

        return dist;
    }
}
