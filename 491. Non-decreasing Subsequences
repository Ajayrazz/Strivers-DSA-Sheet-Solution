class Solution {
    public List<List<Integer>> findSubsequences(int[] nums) {
        //base case
        if(nums == null || nums.length == 0) return new ArrayList<>();
        List<List<Integer>> result = new ArrayList<>();
        Helper(0, nums, result, new ArrayList<>());
        return result;
    }

    //Helper Function
    public void Helper(int index, int[] nums, List<List<Integer>> result, List<Integer> current){
        //base case
        if(current.size() >= 2){
            result.add(new ArrayList<>(current));
        }
        
        // To avoid duplicates at the same recursion level
        Set<Integer> set = new HashSet<>();
        for(int i = index; i < nums.length; i++){
            // Skip if it breaks non-decreasing order
            if(!current.isEmpty() && nums[i] < current.get(current.size() - 1)){
                continue;
            }

            if(set.contains(nums[i])){
                continue;
            }

            set.add(nums[i]);
            current.add(nums[i]);
            Helper(i + 1, nums, result, current);
            current.remove(current.size() - 1); // backtrack
        }
    }
}
