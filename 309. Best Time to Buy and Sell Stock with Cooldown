class Solution {
    public int maxProfit(int[] prices) {
        int n = prices.length;
        int[][] dp = new int[n + 2][2];
        for(int idx = n - 1; idx >= 0; idx--){
            for(int buy = 0; buy <= 1; buy++){
                int profit = 0;
                //case of buy
                if(buy == 0){
                    profit = Math.max(0 + dp[idx + 1][0], -prices[idx] + dp[idx + 1][1]);
                }

                //case of sell
                if(buy == 1){
                    profit = Math.max(0 + dp[idx + 1][1], prices[idx] + dp[idx + 2][0]);
                }

                dp[idx][buy] = profit;
            }
        }

        return dp[0][0];
    }
}
