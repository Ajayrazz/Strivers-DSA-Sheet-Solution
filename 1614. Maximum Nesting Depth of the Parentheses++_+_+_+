class Solution {
    public int maxDepth(String s) {
        int depth = 0;
        Stack<Character> stack = new Stack<>();
        for(char ch : s.toCharArray()){
            if(ch == '('){
                stack.push(ch);
                //update depth
                depth = Math.max(depth, stack.size());
            }
            else if(ch == ')'){
                stack.pop();
            }
        }

        return depth;
    }
}
