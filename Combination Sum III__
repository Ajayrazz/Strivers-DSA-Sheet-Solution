class Solution {
    public List<List<Integer>> combinationSum3(int k, int n) {
        List<List<Integer>> result = new ArrayList<>();
        Helper(1, k, n, result, new ArrayList<>());
        return result;
    }

    //Helper Function
    public void Helper(int index, int k, int n, List<List<Integer>> result, List<Integer> current){
        if(current.size() == k && n == 0){
            result.add(new ArrayList<>(current));
            return;
        }

        for(int i = index; i <= 9; i++){
            current.add(i);
            Helper(i + 1, k, n - i, result, current);
            current.remove((Integer) i);
        }
    }
}
