/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int maxLevelSum(TreeNode root) {
        //base case
        if(root == null) return 0;
        int level_sum = Integer.MIN_VALUE;
        int ans = -1;
        int level = 1;
        Queue<TreeNode> queue = new LinkedList<>();
        queue.add(root);
        while(!queue.isEmpty()){
            int size = queue.size();
            int temp_sum = 0;
            for(int i = 0; i < size; i++){
                TreeNode node = queue.poll();
                if(node != null){
                    temp_sum += node.val;
                }
                //add children
                if(node.left != null){
                    queue.add(node.left);
                }
                if(node.right != null){
                    queue.add(node.right);
                }
            }
            if(temp_sum > level_sum){
                level_sum = temp_sum;
                ans = level;
            }
            level += 1;
        }
        return ans;
    }
}
