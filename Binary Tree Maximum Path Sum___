/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int maxpath_sum = Integer.MIN_VALUE;
    public int maxPathSum(TreeNode root) {
        //base case
        if(root == null) return 0;
        maxPathUtil(root);
        return maxpath_sum;
    }

    //maxPathUtil function
    public int maxPathUtil(TreeNode root){
        //base case
        if(root == null) return 0;
        int left_val = Math.max(0, maxPathUtil(root.left));
        int right_val = Math.max(0, maxPathUtil(root.right));
        //update maxpath_sum
        maxpath_sum = Math.max(maxpath_sum, left_val + right_val + root.val);
        return Math.max(left_val, right_val) + root.val;
    }
}
