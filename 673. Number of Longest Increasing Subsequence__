class Solution {
    public int findNumberOfLIS(int[] nums) {
        int n = nums.length;
        int[] dp = new int[n];
        int[] ct = new int[n];
        Arrays.fill(dp, 1);
        Arrays.fill(ct, 1);
        int max_value = 1;

        for(int i = 0; i < n; i++){
            for(int j = 0; j < i; j++){
                if(nums[i] > nums[j] && dp[i] < dp[j] + 1){
                    //update dp and ct
                    dp[i] = dp[j] + 1;
                    ct[i] = ct[j];
                }
                else if(nums[i] > nums[j] && dp[i] == dp[j] + 1){
                    ct[i] = ct[i] + ct[j];
                }
            }

            //update max_value
            max_value = Math.max(max_value, dp[i]);
        }

        int nos = 0;
        for(int i = 0; i < n; i++){
            if(dp[i] == max_value){
                nos += ct[i];
            }
        }

        return nos;
    }
}
